{
  "name": "gamba",
  "version": "0.5.1",
  "author": "",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "react/dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm build:main && pnpm build:react && pnpm build:ui",
    "dev": "pnpm dev:main && pnpm dev:react && pnpm dev:ui",

    "dev:main": "tsup src/index.ts --watch --format cjs,esm --dts",
    "build:main": "tsup src/index.ts --format cjs,esm --dts",
    "clean:main": "rm -rf dist",

    "build:react": "tsup src/react.ts -d react/dist --format cjs,esm --dts",
    "dev:react": "tsup src/react.ts -d react/dist --watch --format cjs,esm --dts",
    "clean:react": "rm -rf react/dist",

    "build:ui": "tsup src/react-ui.ts -d react-ui/dist --format cjs,esm --dts",
    "dev:ui": "tsup src/react-ui.ts -d react-ui/dist --watch --format cjs,esm --dts",
    "clean:ui": "rm -rf react-ui/dist",

    "lint": "tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules && clean:main && clean:react && clean:ui"
  },
  "dependencies": {
    "gamba-core": "workspace:*",
    "gamba-react": "workspace:*",
    "gamba-react-ui": "workspace:*"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "@changesets/cli": "^2.26.0",
    "@types/react": "^18.0.28",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@coral-xyz/anchor": "^0.27.0",
    "gamba-core": "*",
    "gamba-react": "*",
    "gamba-react-ui": "*",
    "react": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
